{
  "compilerOptions": {
    "target"                          : "es5",
    "lib"                             : [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "main"                            : "dist/index.js",
    "types"                           : "dist/index.d.ts",
    "outDir"                          : "dist",
    "declaration"                     : true,
    "allowJs"                         : true,
    "skipLibCheck"                    : true,
    "esModuleInterop"                 : true,
    "allowSyntheticDefaultImports"    : true,
    "strict"                          : true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch"      : true,
    "module"                          : "esnext",
    "moduleResolution"                : "node",
    "resolveJsonModule"               : true,
    "isolatedModules"                 : true, //changed from default... don't know what this does
    "noEmit"                          : true,
    "jsx"                             : "react"
  },
  "include"        : [
    "src"
  ]
}
